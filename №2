import math

class Точка:
    def __init__(self, x, y):
        self.x = x
        self.y = y

class Відрізок:
    def __init__(self, точка1, точка2):
        self.точка1 = точка1
        self.точка2 = точка2

    def довжина(self):
        довжина_відрізка = math.sqrt((self.точка2.x - self.точка1.x)**2 + (self.точка2.y - self.точка1.y)**2)
        return довжина_відрізка

class Трикутник:
    def __init__(self, відрізок1, відрізок2, відрізок3):
        self.відрізок1 = відрізок1
        self.відрізок2 = відрізок2
        self.відрізок3 = відрізок3

    def периметр(self):
        периметр_трикутника = self.відрізок1.довжина() + self.відрізок2.довжина() + self.відрізок3.довжина()
        return периметр_трикутника

# Приклад використання
точка1 = Точка(0, 0)
точка2 = Точка(3, 0)
точка3 = Точка(0, 4)

відрізок1 = Відрізок(точка1, точка2)
відрізок2 = Відрізок(точка2, точка3)
відрізок3 = Відрізок(точка3, точка1)

трикутник = Трикутник(відрізок1, відрізок2, відрізок3)
print("Периметр трикутника:", трикутник.периметр())
